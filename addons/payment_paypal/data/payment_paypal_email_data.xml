<?xml version="1.0" ?>
<odoo>
    <record id="mail_template_paypal_invite_user_to_configure" model="mail.template">
        <field name="name">Paypal: invite user to configure</field>
        <field name="model_id" ref="payment.model_payment_acquirer"/>
        <field name="lang">${object.env.user.lang}</field>
        <field name="body_html" type="xml">
            <div>
                <p>Hello <b> ${object.env['res.partner'].search([('email','=', object.paypal_email_account)]).name or object.paypal_email_account}</b>,</p>
                <br/>
                <p>You have received a payment through PayPal.</p>
                <p>Kindly follow the instructions given by PayPal to create your account.</p>
                <p>Then, help us to complete your Paypal credentials in Odoo.</p>
                <br/>
                <a href="/web#id=${object.id}&amp;model=payment.acquirer&amp;view_type=form" style="background-color: #875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 12px;">Set Paypal credentials</a>
                <br/><br/>
                <p>Thanks,</p>
                <p><b>${object.env.user.company_id.name}</b></p>
            </div>
        </field>
    </record>
</odoo>
