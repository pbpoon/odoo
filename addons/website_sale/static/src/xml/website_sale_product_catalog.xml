<?xml version="1.0" encoding="utf-8"?>
<template>
    <t t-name="website_sale.product_catalog">
        <div class="row product_grid o_not_editable" contenteditable="false">
            <t t-if="!widget.products.length">
                <div class="form-group text-center mt16">
                    <div class="text-center text-muted oe_product">
                        <t t-if="!widget.products_available">
                            <h3 class="css_editable_display">No product defined.</h3>
                            <p groups="sales_team.group_sale_manager">Click <i>'New'</i> in the top-right corner to create your first product.</p>
                        </t>
                        <t t-else="">
                            <h3 class="css_editable_display">No products are publish yet.</h3>
                        </t>
                    </div>
                </div>
            </t>
            <t t-else="">
                <t t-if="widget.options.catalog_type === 'grid'">
                    <t t-set="products" t-value="widget.products"/>
                    <t t-set="size" t-value="widget.size"/>
                    <t t-call="website_sale.product_cell"/>
                </t>
                <t t-else="">
                    <t t-call="website_sale.carousel"/>
                </t>
                <div class="col-md-12 text-center mt16" role="group">
                    <a t-if="widget._getProducts().length > 1 &amp;&amp; widget.config.device.isMobile" class="fa fa-chevron-left btn btn-default" t-attf-href="##{widget.carouselId}" data-slide="prev"></a>
                    <a class="btn btn-default o_btn_all_products" href="/shop/">View All Products</a>
                    <a t-if="widget._getProducts().length > 1 &amp;&amp; widget.config.device.isMobile" class="fa fa-chevron-right btn btn-default" t-attf-href="##{widget.carouselId}"
                    data-slide="next"></a>
                </div>
            </t>
        </div>
    </t>
    <div t-name="website_sale.carousel" class="o-product-catalog-slider">
        <div t-attf-id="#{widget.carouselId}" class="carousel slide mt48" data-ride="carousel" data-interval="false">
            <div class="carousel-inner">
                <t t-set="size" t-value="widget.size"/>
                <t t-foreach="widget._getProducts()" t-as="products">
                    <div t-att-class="'item ' + (products_index ==  0 ? 'active' : '')">
                        <t t-call="website_sale.product_cell"/>
                    </div>
                </t>
            </div>
        </div>
        <a t-if="widget._getProducts().length > 1 &amp;&amp; !widget.config.device.isMobile" class="o_control left fa fa-chevron-left btn btn-default" t-attf-href="##{widget.carouselId}" data-slide="prev"></a>
        <a t-if="widget._getProducts().length > 1 &amp;&amp; !widget.config.device.isMobile" class="o_control right fa fa-chevron-right btn btn-default" t-attf-href="##{widget.carouselId}" data-slide="next"></a>
    </div>
    <t t-name="website_sale.product_cell">
        <t t-foreach="products" t-as="product">
            <div t-attf-class="col-md-#{size} o_product_item" t-att-data-product-id="product.id">
                <div class="o_product_wrapper mb8">
                    <div class="o_product_image">
                        <a t-attf-href="/shop/product/#{product.id}">
                            <img t-attf-src="/web/image/product.template/#{product.id}/image/300x300" class="img img-responsive o_not_editable"/>
                        </a>
                        <span class="rating"/>
                    </div>
                    <div class="o_product_details">
                        <strong>
                            <a class="o_product_name" t-attf-href="/shop/product/#{product.id}">
                                <t t-esc="product.name"/>
                            </a>
                        </strong>
                        <strong t-if="product.product_variant_count gte 1">
                            <t t-esc="widget._formatCurrencyValue(product.website_price, currency_symbol, currency_position, currency_decimal_places)" />
                        </strong>
                    </div>
                    <div class="o_product_description text-info">
                        <t t-if="product.description_sale" t-raw="widget._formatDescriptionValue(product.description_sale)"/>
                    </div>
                    <div class="o_button_container">
                        <form action="/shop/cart/update" method="post" class="o_add_to_cart o_action_button">
                            <input name="product_id" type="hidden" t-att-value="product.product_variant_id"/>
                            <button type="submit" t-if="product.product_variant_count == 1" class="btn text-center text-primary" title="Add to cart" t-att-data-product-variant-id="product.product_variant_id">
                                <i class="fa fa-shopping-cart"/> Add to cart
                            </button>
                            <button type="submit" t-if="product.product_variant_count gt 1" class="btn text-center text-primary" t-attf-href="/shop/product/#{product.id}" title="Add to cart">
                                <i class="fa fa-shopping-cart"/> Add to cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </t>
    <t t-name="website_sale.categorySelection">
        <div class="form-group">
            <div class="alert alert-info hidden">
                Selected catagory has no saleable products. Please select another category!
            </div>
            <label class="col-sm-2 control-label">Select Category</label>
            <div class="col-sm-10">
                <input type="hidden" name="selection"/>
            </div>
        </div>
    </t>
    <t t-name="website_sale.manualSelection">
        <div>
            <div class="form-group">
                <label for="products" class="col-sm-2 control-label">Select Products</label>
                <div class="col-sm-10">
                    <input type="hidden" name="selection"/>
                </div>
            </div>
        </div>
    </t>

     <t t-name="website_sale.reorderProducts">
        <div class="modal-body">
            <ul class="reorder_products list-unstyled ui-sortable">
                <t t-foreach="products" t-as="submenu">
                    <li t-att-data-menu-id="submenu.id">
                        <div class="input-group col-sm-12">
                            <span class="input-group-addon fa fa-bars"/>
                            <span class="form-control">
                                <span class="js_menu_label">
                                    <t t-esc="submenu.name"/>
                                </span>
                            </span>
                        </div>
                    </li>
                </t>
            </ul>
        </div>
    </t>
</template>
